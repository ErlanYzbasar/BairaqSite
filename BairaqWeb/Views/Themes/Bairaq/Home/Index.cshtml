@{
    Layout = $"~/Views/Themes/{CurrentTheme}/_HomeLayout.cshtml";
    var pinnedArticle = QarList<Article>("pinnedArticle").FirstOrDefault();
    var focusArticleList = QarList<Article>("focusArticleList");
    var topArticleList = QarList<Article>("topArticleList");
    var block1Title = (ViewData["block1Title"] ?? string.Empty) as string;
    var block1Url = (ViewData["block1Url"] ?? string.Empty) as string;
    var block1ArticleList = QarList<Article>("block1ArticleList");
    var block2Title = (ViewData["block2Title"] ?? string.Empty) as string;
    var block2ArticleList = QarList<Article>("block2ArticleList");
    var block3Title = (ViewData["block3Title"] ?? string.Empty) as string;
    var block3Url = (ViewData["block3Url"] ?? string.Empty) as string;
    var block3ArticleList = QarList<Article>("block3ArticleList");
    var block4Title = (ViewData["block4Title"] ?? string.Empty) as string;
    var block4Url = (ViewData["block4Url"] ?? string.Empty) as string;
    var block4ArticleList = QarList<Article>("block4ArticleList");
    var block5Title = (ViewData["block5Title"] ?? string.Empty) as string;
    var block5ArticleList = QarList<Article>("block5ArticleList");
