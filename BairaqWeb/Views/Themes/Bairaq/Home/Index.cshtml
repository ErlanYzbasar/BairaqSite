    var block6Url = (ViewData["block6Url"] ?? string.Empty) as string;
    var block6ArticleList = QarList<Article>("block6ArticleList");
    var youtubeArticleList = QarList<Article>("youtubeArticleList");
}


<main class="main">

@* pinnedArticle & focusArticle *@
<div class="container main-block d-flex">
    <a href="/@CurrentLanguage/article/@(pinnedArticle?.LatynUrl).html">
        <img class="thumbnail" src="@pinnedArticle?.ThumbnailUrl" alt="">
        <div class="content d-flex flex-column justify-content-end">
            <h5 class="title">@pinnedArticle?.Title</h5>
            <p class="date-time">@UnixTimeHelper.UnixTimeToLocalString(pinnedArticle?.AddTime ?? 0, CurrentLanguage)</p>
        </div>
    </a>
    <ul>
        @foreach (var article in focusArticleList)
        {
            <li>
                <a href="/@CurrentLanguage/article/@(article.LatynUrl).html">
                    <img class="thumbnail" src="@article.ThumbnailUrl.Replace("_big.", "_middle.")" alt="">
                    <div class="content d-flex flex-column justify-content-end">
                        <h5 class="title">@article.Title</h5>
                        <p class="date-time">@UnixTimeHelper.UnixTimeToLocalString(article.AddTime, CurrentLanguage)</p>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>

@* Ең өзекті *@
<div class="container sub-block block">
    <div class="head d-flex justify-content-between">
        <h4 class="title">Ең өзекті</h4>
    </div>
    <ul class="article-list d-grid">
        @foreach (var article in topArticleList)
        {
            <li>
                <a href="/@CurrentLanguage/article/@(article.LatynUrl).html">
                    <img class="thumbnail" src="@article.ThumbnailUrl.Replace("_big.", "_middle.")" alt="">
                    <h5 class="title">@article.Title</h5>
                    <p class="date-time">@UnixTimeHelper.UnixTimeToLocalString(article.AddTime, CurrentLanguage)</p>
                </a>
            </li>
        }
    </ul>
</div>

@* Youtube *@
@if (youtubeArticleList.Count > 0)
{
    <div class="youtube-video">
        <div class="container">
            <div class="head d-flex justify-content-between align-items-center">
                <img src="/themes/@CurrentTheme.ToLower()/icon/youtube-icon.svg" alt="" class="youtube-logo">
                <a href="@SiteSetting.Youtube" target="_blank" class="subscription d-none d-md-block">@T("ls_Stoyc")</a>
            </div>
            <div class="video-list d-flex">
                <div class="left">
                    @{
                        var src = HtmlAgilityPackHelper.GetYoutubeUrl(youtubeArticleList.FirstOrDefault().FullDescription);
                        <iframe class="youtube-iframe" src="@src" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen="">
                        </iframe>
                    }
                </div>
                <ul class="right d-flex flex-column">
                    @foreach (var youtube in youtubeArticleList.Skip(1))
                    {
                        var dataSrc = HtmlAgilityPackHelper.GetYoutubeUrl(youtube.FullDescription);
                        <li>
                            <img class="thumbnail youtube-thumbnail" data-src="@dataSrc" src="@youtube.ThumbnailUrl.Replace("_big.", "_middle.")" alt="">
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}


