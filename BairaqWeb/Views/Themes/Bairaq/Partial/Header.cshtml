@{
    var categoryList = QarList<Articlecategory>("categoryList");
    var categoryId = Convert.ToInt32(ViewData["categoryId"] ?? 0);
}

<header class="header">

    <div class="container top d-none d-md-flex justify-content-between align-items-end">
        <a href="/@CurrentLanguage" class="logo">
            <img src="@SiteSetting.DarkLogo" alt="">
        </a>
        <div class="d-flex">
            <a href="https://wa.me/@SiteSetting.Whatsapp.Replace("+", "").Replace(" ", "")" target="_blank" class="whatsapp d-flex align-items-center">
                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 28 28" fill="none">
                    <path fill-rule="evenodd" clip-rule="evenodd" d="M13.9959 0C6.27799 0 0 6.27974 0 13.9999C0 17.0616 0.987375 19.901 2.66584 22.2057L0.921427 27.4072L6.30259 25.6874C8.51585 27.1524 11.1571 28 14.0041 28C21.722 28 28 21.72 28 14.0001C28 6.27999 21.722 0.000231425 14.0041 0.000231425L13.9959 0ZM10.0875 7.11132C9.81603 6.46116 9.61029 6.43654 9.19904 6.41982C9.05901 6.41169 8.90296 6.40356 8.72995 6.40356C8.19493 6.40356 7.63552 6.55989 7.29811 6.90553C6.88686 7.32526 5.86648 8.30455 5.86648 10.3129C5.86648 12.3212 7.33108 14.2635 7.52847 14.5353C7.73421 14.8066 10.3838 18.9877 14.4977 20.6917C17.7149 22.025 18.6695 21.9014 19.4017 21.7451C20.4713 21.5147 21.8126 20.7242 22.15 19.7698C22.4874 18.8149 22.4874 18 22.3885 17.8272C22.2898 17.6544 22.0181 17.5559 21.6068 17.3499C21.1956 17.1441 19.196 16.1564 18.8174 16.0247C18.4471 15.8848 18.0934 15.9343 17.8138 16.3294C17.4188 16.8809 17.0322 17.4407 16.7194 17.778C16.4725 18.0414 16.0692 18.0743 15.732 17.9343C15.2794 17.7452 14.0124 17.3004 12.4489 15.9095C11.2393 14.8314 10.4166 13.49 10.1781 13.0868C9.93935 12.6754 10.1534 12.4364 10.3425 12.2143C10.5482 11.959 10.7456 11.7781 10.9513 11.5393C11.1571 11.3008 11.2723 11.1772 11.4039 10.8973C11.544 10.6257 11.445 10.3458 11.3463 10.14C11.2476 9.93424 10.4249 7.92593 10.0875 7.11132Z" fill="#00A6C8"></path>
                </svg>
                <div class="text d-flex flex-column">
                    <span>Редакция</span>
                    <span>@SiteSetting.Whatsapp</span>
                </div>
            </a>
            
            <ul class="language d-flex align-items-center">
                @foreach (var language in LanguageList.Where(x => x.FrontendDisplay == 1))
                {
                    <li>
                        <a href="/@language.LanguageCulture.ToLower()" class="@(language.LanguageCulture.Equals(CurrentLanguage, StringComparison.OrdinalIgnoreCase) ? "active" : "")">@language.ShortName</a>
                    </li>
                }
            </ul>

            <ul class="contact d-flex align-items-center">

                @if (!string.IsNullOrEmpty(SiteSetting.Facebook))
                {
                    <li>
                        <a href="@SiteSetting.Facebook" target="_blank">
                            <img src="/themes/@CurrentTheme.ToLower()/icon/facebook.svg" alt="">
                        </a>
                    </li>
                }

                @if (!string.IsNullOrEmpty(SiteSetting.Instagram))
                {
                    <li>
                        <a href="@SiteSetting.Instagram" target="_blank">
                            <img src="/themes/@CurrentTheme.ToLower()/icon/instagram.svg" alt="">
                        </a>
                    </li>
                }

                @if (!string.IsNullOrEmpty(SiteSetting.Tiktok))
                {
                    <li>
                        <a href="@SiteSetting.Tiktok" target="_blank">
                            <img src="/themes/@CurrentTheme.ToLower()/icon/tiktok.svg" alt="">
                        </a>
                    </li>
                }

                @if (!string.IsNullOrEmpty(SiteSetting.Youtube))
                {
                    <li>
                        <a href="@SiteSetting.Youtube" target="_blank">
                            <img src="/themes/@CurrentTheme.ToLower()/icon/youtube.svg" alt="">
                        </a>
                    </li>
                }

                @if (!string.IsNullOrEmpty(SiteSetting.Telegram))
                {
                    <li>
                        <a href="https://t.me/@SiteSetting.Telegram" target="_blank">
                            <img src="/themes/@CurrentTheme.ToLower()/icon/telegram.svg" alt="">
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="navbar-bg">
        <div class="container">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid gap-2 gap-md-0">
                    <a href="/kz" class="logo mobile-logo d-md-none">
                        <img src="@SiteSetting.LightLogo" alt="">
                    </a>
                    <ul class="language mobile d-flex align-items-center d-md-none">
                        @foreach (var language in LanguageList.Where(x => x.FrontendDisplay == 1))
                        {
                            <li>
                                <a href="/@language.LanguageCulture.ToLower()" class="@(language.LanguageCulture.Equals(CurrentLanguage, StringComparison.OrdinalIgnoreCase) ? "active" : "")">@language.ShortName</a>
                            </li>
                        }
                    </ul>
                    
                    <button class="navbar-toggler p-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M3 12H21M3 6H21M3 18H21" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                        </svg>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto m-0 d-md-none mt-4">
                            @foreach (var category in categoryList)
                            {
                                <li class="nav-item">
                                    <a class="nav-link@(categoryId == category.Id ? " active" : "")" aria-current="page" href="/@CurrentLanguage/category/@(category.LatynUrl).html">@category.Title</a>
                                </li>
                            }
                        </ul>

                        <ul class="navbar-nav me-auto m-0 d-none d-md-flex">
                            @foreach (var category in categoryList.Take(5))
                            {
                            <li class="nav-item">
                                <a class="nav-link@(categoryId == category.Id ? " active" : "")" aria-current="page" href="/@CurrentLanguage/category/@(category.LatynUrl).html">@category.Title</a>
                            </li>
                            }
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    @T("ls_Other")
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    @foreach (var category in categoryList.Skip(5))
                                    {
                                    <li>
                                        <a class="dropdown-item@(categoryId == category.Id ? " active" : "")" href="/@CurrentLanguage/category/@(category.LatynUrl).html">@category.Title</a>
                                    </li>
                                    }
                                </ul>
                            </li>
                        </ul>
                        <form action="/kz/article/list" method="get" class="input-group search">
                            <input type="text" class="form-control" placeholder="@T("ls_Searchbywebsite")" aria-label="search" name="keyword">
                            <button class="btn" type="submit" id="button-addon2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="19" height="19" viewBox="0 0 19 19" fill="none">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M13.2147 11.6289H12.3795L12.0835 11.3435C13.1195 10.1383 13.7433 8.57369 13.7433 6.87164C13.7433 3.07638 10.6669 0 6.87164 0C3.07638 0 0 3.07638 0 6.87164C0 10.6669 3.07638 13.7433 6.87164 13.7433C8.57369 13.7433 10.1383 13.1195 11.3435 12.0835L11.6289 12.3795V13.2147L16.9148 18.49L18.49 16.9148L13.2147 11.6289ZM6.87164 11.6289C4.23927 11.6289 2.11435 9.50401 2.11435 6.87164C2.11435 4.23927 4.23927 2.11435 6.87164 2.11435C9.50401 2.11435 11.6289 4.23927 11.6289 6.87164C11.6289 9.50401 9.50401 11.6289 6.87164 11.6289Z" fill="#00A6C8"></path>
                                </svg>
                            </button>
                        </form>
                    </div>
                </div>
            </nav>
        </div>
    </div>
</header>